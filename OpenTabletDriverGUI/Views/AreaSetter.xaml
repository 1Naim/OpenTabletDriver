<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenTabletDriverGUI.Views.AreaSetter">
    <UserControl.Styles>
        <Style Selector="Border">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="{DynamicResource LightThemeBG}"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style Selector="TextBlock.UnitLabel">
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>
    </UserControl.Styles>
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*,*,*">
        <TextBlock Grid.ColumnSpan="4" Classes="h1" Text="{Binding $parent[UserControl].Title}"/>
        <Border Grid.Column="0" Grid.Row="2">
            <Grid RowDefinitions="*,Auto">
                <TextBlock Grid.Row="0" Text="Width"/>
                <TextBox Grid.Row="1" Text="{Binding $parent[UserControl].AreaWidth}"/>
                <TextBlock Grid.Row="1" Classes="UnitLabel" Text="{Binding $parent[UserControl].MeasurementUnit}"/>
            </Grid>
        </Border>
        <Border Grid.Column="1" Grid.Row="2">
            <Grid RowDefinitions="*,Auto">
                <TextBlock Grid.Row="0" Text="Height"/>
                <TextBox Grid.Row="1" Text="{Binding $parent[UserControl].AreaHeight}"/>
                <TextBlock Grid.Row="1" Classes="UnitLabel" Text="{Binding $parent[UserControl].MeasurementUnit}"/>
            </Grid>
        </Border>
        <Border Grid.Column="2" Grid.Row="2">
            <Grid RowDefinitions="*,Auto">
                <TextBlock Grid.Row="0" Text="X Offset"/>
                <TextBox Grid.Row="1" Text="{Binding $parent[UserControl].AreaXOffset}"/>
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.Row="2">
            <Grid RowDefinitions="*,Auto">
                <TextBlock Grid.Row="0" Text="Y Offset"/>
                <TextBox Grid.Row="1" Text="{Binding $parent[UserControl].AreaYOffset}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
