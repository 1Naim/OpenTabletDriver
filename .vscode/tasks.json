{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Daemon",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/OpenTabletDriver.Daemon/OpenTabletDriver.Daemon.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
